{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}